        desktop="yes"
        applications="no"
        startMenu="yes"
        startup="no"
        target="$INSTALL_PATH/bin/${app.name}"
        commandLine=""
        workingDirectory="$INSTALL_PATH/bin"
        description="${app.title.full} Launcher"
        categories="Religion;Bible;Application;Utility"
        iconFile="$INSTALL_PATH/${app.name}/${app.name}48.png"
        iconIndex="0"
        encoding="UTF-8"
        terminal="false"
        initialState="normal">
        <createForPack name="${app.title.full}"/>
    </shortcut>
    
