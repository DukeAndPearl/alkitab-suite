<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="${app.title.full} ${app.version}" location="applications"/>
  
    <shortcut
        name="${app.title.full} ${app.version}"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\${app.name}.exe"
        commandLine=""
        description="${app.title.full} Launcher"
        iconFile="$INSTALL_PATH\${app.name}\${app.name}.ico"
        iconIndex="0"
        initialState="noShow">
            
        <createForPack name="${app.title.full}"/>
    </shortcut>
   
    <shortcut
        name="Readme.html"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\readme.html"
        commandLine=""
        description="${app.title.full} Readme">
            
        <createForPack name="${app.title.full}"/>
    </shortcut>

    <shortcut
        name="Uninstaller"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstaller\uninstaller.exe"
        commandLine=""
        description="${app.title.full} Uninstaller">
            
        <createForPack name="${app.title.full}"/>
    </shortcut>
   
</shortcuts>
