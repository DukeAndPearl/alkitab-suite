<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <skipIfNotSupported/>
    <programGroup defaultName="${app.title.full}" location="applications"/>
  
    <shortcut
        name="${app.title.full}"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\${app.name}.exe"
        commandLine=""
        description="${app.title.full} Launcher"
        iconFile="$INSTALL_PATH\${app.name}\${app.name}.ico"
        iconIndex="0"
        initialState="noShow">
            
        <createForPack name="${app.title.full}"/>
    </shortcut>
   
    <shortcut
        name="Readme.html"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\readme.html"
        commandLine=""
        description="${app.title.full} Readme">
            
        <createForPack name="${app.title.full}"/>
    </shortcut>

    <shortcut
        name="Uninstaller"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstaller\uninstaller.exe"
        commandLine=""
        description="${app.title.full} Uninstaller">
            
        <createForPack name="${app.title.full}"/>
    </shortcut>
   
</izpack:shortcuts>
