<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <!-- <notSupported/> -->
    <skipIfNotSupported/>

    <!-- Disable Program Group because does not conform with Ubuntu Menu Shortcut Entry -->
    <!-- <programGroup defaultName="${app.title.full} ${app.version}" location="Applications"/> -->

    <shortcut
        name="${app.title.full}"
        type="Application"
        programGroup="no"
        desktop="yes"
        applications="no"
        startMenu="yes"
        startup="no"
        target="$INSTALL_PATH/bin/${app.name}"
        commandLine=""
        workingDirectory="$INSTALL_PATH/bin"
        description="${app.title.full} Launcher"
        categories="Religion;Bible;Education;Application;Utility"
        iconFile="$INSTALL_PATH/${app.name}/${app.name}48.png"
        iconIndex="0"
        encoding="UTF-8"
        terminal="false"
        initialState="normal">
        <createForPack name="${app.title.full}"/>
    </shortcut>
    
